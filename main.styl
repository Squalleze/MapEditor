// out: $1.css, compress: true
*
  box-sizing: border-box
  margin: 0
  border-spacing: 0
  padding: 0

a, a:visited, a:hover, a:active
  color: inherit
  text-decoration: none

body
  font-family: 'Roboto'
  font-weight: 400

  color: #C2C2DA

.horizontal
  display: flex
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0

.vertical
  display: flex
  flex-direction: column

.no-padding
  padding: 0

fieldset.tags
  table
    width: 100%
    input
      width: 100%
      border: none
      padding: 3px 5px
      color: inherit
      background: none
      &[type="button"]
        cursor: pointer
    td
      max-width: 50%
    tr:nth-child(2n+1)
      background-color: rgba(0, 0, 0, .1)

aside
  padding: 5px
  background-color: #324650

  fieldset
    overflow: hidden
    overflow: -moz-hidden-unscrollable

    margin-top: 5px
    border: none
    border-radius: 5px
    background-color: #465a6e

    & > label
      padding: 3px 5px
      &:nth-child(2n+0)
        background-color: rgba(0, 0, 0, .1)

    legend
      // width: 100%
      border-radius: 5px
      padding: 3px 5px
      background-color: #465a6e
    label
      display: flex
      align-items: center

      input
        margin-right: 5px

#menu
  width: 300px
  border-right: solid 1px rgba(0, 0, 0, .25)
#pick
  width: 64px
  border-right: solid 1px rgba(0, 0, 0, .25)
#right-menu
  width: 300px
  min-width: 300px
  border-left: solid 1px rgba(0, 0, 0, .25)
#bottom-menu
  height: 150px
  border-top: solid 1px rgba(0, 0, 0, .25)
  display: flex

  fieldset
    margin-right: 5px
#xml
  display: block
#workspace
  flex-grow: 1
  background-color: #6A7495
  overflow: hidden

input
  border: none
  background: none
  color: inherit

.table
  display: table
.td
  display: table-cell
.tr
  display: table-row

#tree
  overflow-y: scroll
  .td
    padding: 3px 5px
  .tr:nth-child(2n+1)
    background-color: rgba(0, 0, 0, .1)
